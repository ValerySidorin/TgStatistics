@model TgAdsStatistics.Models.ViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" asp-controller="Admin">
    <div asp-validation-summary="All">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Username" class="control-label">Имя пользователя</label>
            <input type="text" asp-for="Username" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-sm btn-primary" />
        </div>
    </div>
</form>

